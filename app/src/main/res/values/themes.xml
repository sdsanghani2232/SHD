<resources>
    <style name="Base.Theme.SHD" parent="Theme.Material3.Dark.NoActionBar"> </style>

    <style name="Theme.SHD" parent="Base.Theme.SHD" />

    <style name="Theme.SHD.Main" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.SHD.Login.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/login_button_background_color</item>
        <item name="android:textColor">@color/login_button_text_color</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.SHD.Login.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/login_forgot_text_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.SHD.Login.ResetPassword.msg" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/RP_msg_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.SHD.Login.ResetPassword" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/RP_background</item>
        <item name="colorPrimary">@color/RP_color_primary</item>
    </style>

    <style name="Theme.SHD.Login.AppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="titleTextColor">@color/RP_title_color</item>
        <item name="navigationIcon">@drawable/back_menu</item>
        <item name="navigationIconTint">@color/RP_navigation_icon_color</item>
        <item name="android:background">@color/RP_app_bar_color</item>
    </style>

    <style name="Theme.SHD.fab_button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="Theme.SHD.form.AllText.view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/add_jewellery_form_text_color</item>
    </style>

    <style name="Theme.SHD.form.dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="dropDownBackgroundTint">@color/Edit_Text_drop_down_background</item>
        <item name="dropDownListViewStyle">@color/Edit_Text_drop_down_list_style_color</item>
    </style>

    <style name="Theme.SHD.form.calender" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/calender_text_color</item>
        <item name="colorOnPrimary">@color/calender_selected_date</item>
        <item name="materialCalendarHeaderTitle">@style/Theme.SHD.form.calender.header.title</item>
        <item name="materialCalendarHeaderSelection" >@style/Theme.SHD.form.calender.header.selection</item>
        <item name="materialCalendarHeaderToggleButton">@style/Theme.SHD.form.calender.switch.keyboard</item>
        <item name="materialCalendarYearNavigationButton">@style/Theme.SHD.form.calender.year.selection</item>
        <item name="materialCalendarMonthNavigationButton">@style/Theme.SHD.form.calender.month.selection</item>
        <item name="materialCalendarHeaderLayout">@style/Theme.SHD.form.calender.header.layout</item>
    </style>
    
    <style name="Theme.SHD.form.slider" parent="@style/Widget.Material3.Slider.Label">
        <item name="backgroundTint">@color/slider_label_background_color</item>
        <item name="android:textColor">@color/slider_label_text_color</item>
    </style>

    <style name="Theme.SHD.form.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/form_button_background_color</item>
        <item name="android:textColor">@color/form_button_text_color</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.SHD.excel.fileSelect.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/excel_button_background_color</item>
        <item name="android:textColor">@color/form_button_text_color</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>