<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SHD" parent="Theme.Material3.Dark.NoActionBar"> </style>

    <style name="Theme.SHD" parent="Base.Theme.SHD" />

    <style name="Theme.SHD.Main" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.SHD.Login.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/login_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.SHD.Login.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.SHD.Login.ResetPassword" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="Theme.SHD.Login.AppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@drawable/back_menu</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:background">@color/app_color</item>
    </style>


</resources>