<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SHD.form.calender.header.layout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:backgroundTint">@color/calender_header_background</item>
    </style>
    <style name="Theme.SHD.form.calender.header.title" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/calender_text_color</item>
    </style>
    
    <style name="Theme.SHD.form.calender.header.selection" parent="@style/Widget.Material3.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/calender_text_color</item>
    </style>
    
    <style name="Theme.SHD.form.calender.switch.keyboard" parent="@style/Widget.Material3.MaterialCalendar.HeaderToggleButton">
        <item name="android:backgroundTint">@color/calender_header_background</item>
        <item name="android:tint">@color/calender_key_bored_change_icon_color</item>
    </style>

    <style name="Theme.SHD.form.calender.year.selection" parent="@style/Widget.Material3.MaterialCalendar.YearNavigationButton">
        <item name="android:textColor">@color/calender_text_color</item>
        <item name="iconTint">@color/calender_text_color</item>
    </style>

    <style name="Theme.SHD.form.calender.month.selection" parent="@style/Widget.Material3.MaterialCalendar.MonthNavigationButton">
        <item name="android:textColor">@color/calender_text_color</item>
        <item name="iconTint">@color/calender_text_color</item>
    </style>
    
    <style name="Theme.SHD.dialogBox" parent="MaterialAlertDialog.Material3">
        <item name="android:backgroundDimAmount">35.00</item>
    </style>

    <style name="Theme.SHD.inputText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/Edit_Text_hint_text_color</item>
        <item name="boxStrokeColor">@color/Edit_Text_box_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/Edit_Text_box_stroke_error_color</item>
        <item name="errorIconTint">@color/Edit_Text_end_error_icon_color</item>
        <item name="errorTextColor">@color/Edit_Text_error_text_color</item>
        <item name="cursorColor">@color/Edit_Text_cursor_color</item>
        <item name="cursorErrorColor">@color/Edit_Text_cursor_error_color</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="hintEnabled">false</item>

    </style>

</resources>