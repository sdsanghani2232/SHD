<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.subFragments.addJewellery.ExcelFragment">


   <ScrollView
       android:id="@+id/excel_main_scroll_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginHorizontal="@dimen/img_scroll_margin_Horizontal"
       android:scrollbars="none"
       android:layout_marginTop="10dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/excel_main_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/excel_error_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:textColor="@color/Edit_Text_error_text_color"
               app:layout_constraintTop_toTopOf="@id/excel_main_layout"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toTopOf="@id/excel_customer_text"
               android:fontFamily="@font/poppins_medium"
               android:textSize="20sp"
               android:visibility="gone"
               />

           <TextView
               android:id="@+id/excel_customer_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.Text"
               android:text="@string/customer_name"
               app:layout_constraintTop_toTopOf="@id/excel_main_layout"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="5dp"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/excel_customer_text_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               style="@style/Theme.SHD.inputText"
               app:layout_constraintTop_toBottomOf="@id/excel_customer_text"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/excel_customer_input_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_medium"
                   android:hint="@string/enter_customer_name"
                   android:textColorHint="@color/Edit_Text_hint_text_color"
                   android:inputType="text"
                   android:textColor="@color/Edit_Text_input_text_color"
                   android:textSize="16sp"
                   tools:ignore="VisualLintTextFieldSize" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:id="@+id/excel_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.Text"
               android:text="@string/status"
               app:layout_constraintTop_toBottomOf="@id/excel_customer_text_layout"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="10dp"
               />

           <com.google.android.material.materialswitch.MaterialSwitch
               android:id="@+id/excel_status_switch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/excel_customer_text_layout"
               android:layout_marginTop="5dp"
               android:checked="false"
               app:trackTint="@color/switch_selector"
               app:thumbTint="@color/switch_thumb_color"/>

           <TextView
               android:id="@+id/excel_work_by_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.Text"
               android:text="@string/work_by"
               app:layout_constraintTop_toBottomOf="@id/excel_status_switch"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="5dp"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/excel_work_by_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               style="@style/Theme.SHD.inputText"
               app:layout_constraintTop_toBottomOf="@id/excel_work_by_text"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/excel_work_by_input_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_medium"
                   android:text="@string/work_by_text"
                   android:textColorHint="@color/Edit_Text_hint_text_color"
                   android:inputType="text"
                   android:textColor="@color/Edit_Text_input_text_color"
                   android:textSize="16sp"
                   tools:ignore="VisualLintTextFieldSize" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:id="@+id/excel_work_place_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.Text"
               android:text="@string/work_by"
               app:layout_constraintTop_toBottomOf="@id/excel_work_by_layout"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="5dp"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/excel_work_place_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               style="@style/Theme.SHD.inputText"
               app:layout_constraintTop_toBottomOf="@id/excel_work_place_text"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/excel_work_place_input_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_medium"
                   android:text="@string/work_place_text"
                   android:textColorHint="@color/Edit_Text_hint_text_color"
                   android:inputType="text"
                   android:textColor="@color/Edit_Text_input_text_color"
                   android:textSize="16sp"
                   tools:ignore="VisualLintTextFieldSize" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:id="@+id/excel_date_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.Text"
               android:text="@string/date"
               app:layout_constraintTop_toBottomOf="@id/excel_work_place_layout"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="5dp"
               />
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/excel_date_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               style="@style/Theme.SHD.inputText"
               app:layout_constraintTop_toBottomOf="@id/excel_date_text"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:startIconDrawable="@drawable/calendar_icon"
               app:startIconTint="@color/calender_icon"
               app:startIconCheckable="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/excel_date_display_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_medium"
                   android:inputType="none"
                   android:focusable="false"
                   android:textColor="@color/Edit_Text_input_text_color"
                   android:textSize="16sp"
                   tools:ignore="VisualLintTextFieldSize,SpeakableTextPresentCheck" />

           </com.google.android.material.textfield.TextInputLayout>

<!--TODO : Change excel img -->
           <ImageView
               android:id="@+id/excel_img"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:layout_constraintTop_toBottomOf="@id/excel_date_layout"
               app:layout_constraintStart_toStartOf="parent"
               android:src="@drawable/excel_logo"
               android:contentDescription="@string/excel_img"
               android:layout_marginTop="10dp"
               android:layout_marginStart="10dp"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/excel_file_name_layout"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               style="@style/Theme.SHD.inputText"
               app:layout_constraintBottom_toTopOf="@id/excel_save_button"
               app:layout_constraintTop_toBottomOf="@id/excel_date_layout"
               app:layout_constraintStart_toEndOf="@+id/excel_img"
               app:layout_constraintEnd_toEndOf="parent">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/excel_file_name_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_medium"
                   android:inputType="none"
                   android:hint="@string/file_name"
                   android:textColorHint="@color/Edit_Text_hint_text_color"
                   android:focusable="false"
                   android:textColor="@color/Edit_Text_input_text_color"
                   android:textSize="16sp"
                   tools:ignore="VisualLintTextFieldSize,SpeakableTextPresentCheck" />

           </com.google.android.material.textfield.TextInputLayout>
           <Button
               android:id="@+id/excel_select_file"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.excel.fileSelect.Button"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginHorizontal="15dp"
               android:text="@string/select_excel"
               app:layout_constraintEnd_toEndOf="@id/excel_img"
               app:layout_constraintStart_toStartOf="@id/excel_img"
               app:layout_constraintTop_toBottomOf="@id/excel_img"
               tools:ignore="VisualLintButtonSize" />


           <Button
               android:id="@+id/excel_save_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/Theme.SHD.form.Button"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginHorizontal="15dp"
               android:text="@string/save"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/excel_select_file"
               android:elevation="7dp"
               android:stateListAnimator="@null"
               tools:ignore="VisualLintButtonSize" />

       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>